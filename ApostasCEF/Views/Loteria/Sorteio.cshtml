@using ApostasCEF.ViewModels;

@model SorteioViewModel
@{
    ViewBag.Title = "Sorteio";
}

<div class="row">
    <h2>Números Sorteados</h2>

    <nav class="navbar" role="navigation">
        <ul class="nav navbar-nav margin-bottom-35">
            @foreach (int numero in Model.NumerosSorteados)
            {
                <li class="">
                    <button class="btn btn-default btn-lg alert-success" data-numero="@numero">
                        @numero
                    </button>
                </li>
            }
        </ul>
    </nav>
</div>

<div class="row">
    <h2>Resultado</h2>

    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Nº Acertos</th>
                <th>Vencedores</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>6</td>
                <td>@Model.ListaApostasGanhadoras.Count(a => a.TotalAcertos == 6)</td>
            </tr>
            <tr>
                <td>5</td>
                <td>@Model.ListaApostasGanhadoras.Count(a => a.TotalAcertos == 5)</td>
            </tr>
            <tr>
                <td>4</td>
                <td>@Model.ListaApostasGanhadoras.Count(a => a.TotalAcertos == 4)</td>
            </tr>
        </tbody>
    </table>

</div>
